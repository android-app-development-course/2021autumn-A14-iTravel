<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--1、圆角 和 按下后背景变颜色-->
    <item android:state_pressed="false"><!-- 按钮未点击-->
        <shape>
            <stroke android:width="1dp" android:color="#D8D4D4" /><!-- 边框颜色，边框大小-->
<!--            <solid android:color="#3C3B3B" /> &lt;!&ndash; 填充的颜色：这里设置背景透明 &ndash;&gt;-->
            <corners android:radius="25dip" /><!-- android:radius 弧形的半径 -->
            <!--            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />-->
        </shape>
    </item>

    <item android:state_pressed="true"> <!-- 按钮选中状态-->
        <shape>
            <stroke android:width="3dp" android:color="#757171" /><!-- 边框颜色，边框大小-->
            <solid android:color="#757171" /> <!-- 填充的颜色：这里设置背景透明 -->
            <corners android:radius="25dip" /><!-- android:radius 弧形的半径 -->
            <!--            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />-->
        </shape>
    </item>

</selector>
